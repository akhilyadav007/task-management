<div class="container">
  <h1>User Tasks</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>State</th>
        <th>Deadline</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
    <% @user_tasks.each do |user_task| %>
      <tr>
        <td><%= user_task.title %></td>
        <td><%= user_task.description %></td>
        <td><%= user_task.state %></td>
        <td><%= user_task.deadline %></td>
        <td><%= link_to 'Show', user_task, class: "btn btn-primary btn-sm" %></td>
        <td><%= link_to 'Edit', edit_user_task_path(user_task), class: "btn btn-secondary btn-sm" %></td>
        <td>
        <%= link_to 'Destroy', user_task, method: :delete, form:{ data: { turbo_confirm: 'Are you sure?' }}, class: "btn btn-xs btn-primary" %></td>
        </td>
      </tr>
    <% end %>    
    </tbody>
  </table>

  <br>

  <%= link_to 'New User Task', new_user_task_path, class: "btn btn-success" %>
</div>
